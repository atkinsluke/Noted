{
  "name": "tiled-notes",
  "version": "1.0.0",
  "description": "Personal note-taking app with Hyprland-style tiling",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "setup": "node server/setup-db.js",
    "start": "NODE_ENV=production node server/index.js",
    "build:prod": "npm run build && npm run setup"
  },
  "dependencies": {
    "sql.js": "^1.10.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
